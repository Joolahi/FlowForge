<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Desktop.Pages.FrontPage"
             BackgroundColor="{DynamicResource PageGradientStart}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" >
            <Border StrokeThickness="3"
                StrokeShape="RoundRectangle 30"
                BackgroundColor="White"
                Padding="20">
                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left content -->
                    <VerticalStackLayout Grid.Column="0" Spacing="20">
                        <Label Text="AI Assisted Workflow"
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                        <Label Text="Streamline your work with intelligent automation, collaboration, and productivity tools powered by AI."
                           FontSize="18"
                           TextColor="Gray" />
                        <HorizontalStackLayout Spacing="10">
                            <Button Text="Login"
                                BackgroundColor="#4F46E5"
                                TextColor="White"
                                Padding="15,10"
                                Clicked="OnLoginClicked"
                                CornerRadius="15"/>
                            <Button Text="Register"
                                BorderColor="#4F46E5"
                                BorderWidth="2"
                                TextColor="#4F46E5"
                                BackgroundColor="Transparent"
                                Padding="15,10"
                                Clicked="OnRegisterClicked"
                                CornerRadius="15"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- Right image (optional) -->
                    <!-- <Image Grid.Column="1" ... /> -->
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
